<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:wm="using:Iciclecreek.Avalonia.WindowManager"
             xmlns:sys="using:System"
             x:Class="Demo.App"
             RequestedThemeVariant="Default">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.Resources>
    <sys:Int64 x:Key="ManagedWindowBorderMargin">5</sys:Int64>

    <ControlTheme x:Key="{x:Type wm:ManagedWindow}"
                      TargetType="wm:ManagedWindow">
      <Setter Property="Background"
              Value="AliceBlue" />
      <Setter Property="BorderBrush"
              Value="DarkGray" />
      <Setter Property="BorderThickness"
              Value="1" />
      <Setter Property="Margin"
              Value="0" />
      <Setter Property="Padding"
              Value="0" />
      <Setter Property="MinHeight"
              Value="50"/>
      <Setter Property="MinWidth"
              Value="100"/>
      <!--<Setter Property="IsCloseButtonVisible"
              Value="True" />-->
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
              <Grid Background="{TemplateBinding Background}"
                    RowDefinitions="Auto * Auto" 
                    ColumnDefinitions="Auto * Auto">

                <Grid Grid.ColumnSpan="3" RowDefinitions="Auto *">
                  <!--Title Bar-->
                  <Grid Name="PART_TitleBar"
                        ColumnDefinitions="* Auto Auto Auto"
                        Background="Gray">
                    <TextBlock
                      Padding="10 0"
                      VerticalAlignment="Center"
                      Text="Title"/>
                    <Button Name="PART_MinimizeButton"
                            Grid.Column="1"
                            Content="ðŸ—•"/>
                    <Button Name="PART_MaximizeButton"
                            Grid.Column="2"
                            Content="ðŸ—–"/>
                    <Button Name="PART_RestoreButton"
                            Grid.Column="2"
                            Content="ðŸ——"/>
                    <Button Name="PART_CloseButton" Grid.Column="3">ðŸ—™</Button >
                  </Grid>

                  <!--Content-->
                  <Panel Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2"
                         Background="Transparent">
                    <ContentPresenter Name="PART_ContentPresenter"
                                      Background="{TemplateBinding Background}"
                                      Margin="{DynamicResource ConsoloniaDialogWindowBorderMargin}"
                                      Padding="{TemplateBinding Padding}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                      Content="{TemplateBinding Content}" />
                  </Panel>
                </Grid>

                <Rectangle Name="PART_ResizeTopLeft" 
                           Grid.Row="0" Grid.Column="0"  
                           Fill="Transparent"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           Width="4"
                           Height="4"/>
                <Rectangle Name="PART_ResizeTop" 
                           Grid.Row="0" Grid.Column="1" 
                           Fill="Transparent"
                           VerticalAlignment="Top"
                           Height="4"/>
                <Rectangle Name="PART_ResizeTopRight" 
                           Grid.Row="0" Grid.Column="2" 
                           Fill="Transparent"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Right"
                           Height="4"
                           Width="4"/>
                <Rectangle Name="PART_ResizeLeft" 
                           Grid.Row="1" Grid.Column="0" 
                           Fill="Transparent"
                           HorizontalAlignment="Left"
                           Width="4"/>
                <Rectangle Name="PART_ResizeRight" 
                           Grid.Row="1" Grid.Column="2"  
                           HorizontalAlignment="Right"
                           Fill="Transparent"
                           Width="4"/>
                <Rectangle Name="PART_ResizeBottomLeft" 
                           Grid.Row="2" Grid.Column="0" 
                           Fill="Transparent"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Left"
                           Height="4"
                           Width="4"/>
                <Rectangle Name="PART_ResizeBottom" 
                           Grid.Row="2" Grid.Column="1"  
                           Fill="Transparent"
                           VerticalAlignment="Bottom"
                           Height="4"/>
                <Rectangle Name="PART_ResizeBottomRight" 
                           Grid.Row="2" Grid.Column="2" 
                           Fill="Transparent"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Height="4"
                           Width="4"/>
              </Grid>
          </ControlTemplate>
        </Setter.Value>
      </Setter>

      <Style Selector="^:minimized">
        <Setter Property="Background" Value="Aqua"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate>
              <Border BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      Background="Transparent">
                <Grid RowDefinitions="Auto *">
                  <!--Centered layout-->
                  <Grid Name="PART_TitleBar"
                        ColumnDefinitions="* Auto Auto Auto"
                        Background="Gray">
                    <TextBlock>Title</TextBlock>
                  </Grid>
                </Grid>
              </Border>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>

      <Style Selector="^:minimized /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="IsVisible" Value="false"/>
      </Style>

      <Style Selector="^:maximized">
        <Setter Property="Background" Value="BurlyWood"/>
      </Style>

      <Style Selector="^:normal /template/ Button#PART_MaximizeButton">
        <Setter Property="IsVisible" Value="True"/>
      </Style>
      <Style Selector="^:normal /template/ Button#PART_RestoreButton">
        <Setter Property="IsVisible" Value="False"/>
      </Style>

      <Style Selector="^:maximized /template/ Button#PART_MaximizeButton">
        <Setter Property="IsVisible" Value="False"/>
      </Style>
      <Style Selector="^:maximized /template/ Button#PART_RestoreButton">
        <Setter Property="IsVisible" Value="True"/>
      </Style>
    </ControlTheme>

  </Application.Resources>

  <Application.Styles>
    <FluentTheme />
  </Application.Styles>
</Application>