<wm:ManagedWindow xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wm="using:Iciclecreek.Avalonia.WindowManager"
        xmlns:local="using:Demo"
        MinWidth="150"
        Theme="{StaticResource {x:Type wm:ManagedWindow}}"
        x:Class="Demo.MyManagedWindow"
        x:DataType="local:MyManagedWindowViewModel"
        Title="{Binding Title}">
  <StackPanel>
    <TextBlock Text="{Binding Counter}"/>
    <Button
        HorizontalAlignment="Left" 
        Click="OnIncrement">Increment</Button>

    <Button
        HorizontalAlignment="Left" 
        Click="OnSpin">Spin</Button>
  </StackPanel>
</wm:ManagedWindow>
