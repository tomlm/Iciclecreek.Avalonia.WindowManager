<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wm="using:Iciclecreek.Avalonia.WindowManager"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo.MainWindow"
        Title="Demo">
  
  <wm:ManagedWindowsPanel>
    <StackPanel>
      <TextBlock> Welcome to Avalonia!</TextBlock>
      <Button Content="Click Me" />
    </StackPanel>
    <wm:ManagedWindow Title="Test" Width="200" Height="200" Canvas.Top="100" Canvas.Left="100" >
      <Panel>
        <Canvas>
          <Rectangle Width="150" Height="150" Fill="Blue" Canvas.Top="100" Canvas.Left="100"/>
        </Canvas>
      </Panel>
    </wm:ManagedWindow >

    <wm:ManagedWindow Title="Test" Width="300" Height="200" Canvas.Top="200" Canvas.Left="150" >
      <Panel>
        <Canvas>
          <Rectangle Width="150" Height="150" Fill="Purple" Canvas.Top="100" Canvas.Left="100"/>
        </Canvas>
      </Panel>
    </wm:ManagedWindow >

  </wm:ManagedWindowsPanel>
</Window>
