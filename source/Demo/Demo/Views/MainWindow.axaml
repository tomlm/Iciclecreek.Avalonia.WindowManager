<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Demo.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:Demo.Views"
        xmlns:wm="using:Iciclecreek.Avalonia.WindowManager"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Demo.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Demo">
  <wm:WindowsPanel x:Name="Screen">
    <Grid RowDefinitions="Auto *">
      <views:MainView />
      <wm:WindowsPanel x:Name="SubPanel" Background="Gray" Grid.Row="1"
            Margin="50">
        <StackPanel Orientation="Vertical" Spacing="10">
          <TextBlock Text="Child WindowsPanel - Windows created here will be scoped to here" Foreground="White"/>
          <views:MainView />
        </StackPanel>
      </wm:WindowsPanel>
    </Grid>
  </wm:WindowsPanel>
</Window>
